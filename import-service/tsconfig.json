{
  "compilerOptions": {
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2020",
    "outDir": "lib",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["./**/*.ts", "serverless.yml"],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}